{
    "compilerOptions": {
        "module": "commonjs",
         "lib": ["es6", "dom"],
        "target": "es5",
        "types": ["reflect-metadata"],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "watch": true
    },
    "exclude": [
        "node_modules"
   ]
}
